<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:background="#d3efde"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"

    >

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recyclerview_row_meal_imageView"
                android:layout_width="150dp"
                android:layout_height="140dp"
                app:srcCompat="@drawable/ic_launcher_background"
                />

            <TextView
                android:id="@+id/recyclerview_row_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tarifin sahibi"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recyclerview_row_meal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="yemek ismi"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/star64"
                        app:tint="@color/colorICon" />

                    <TextView
                        android:id="@+id/recyclerview_row_meal_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Puan"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="4dp"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/people"
                        android:layout_gravity="center"
                        app:tint="@color/colorICon" />

                    <TextView
                        android:id="@+id/recyclerview_row_meal_portion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kaç kişilik"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/time2"
                        android:layout_gravity="center"
                        app:tint="@color/colorICon" />


                    <TextView
                        android:id="@+id/recyclerview_row_meal_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Zaman"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</androidx.cardview.widget.CardView>