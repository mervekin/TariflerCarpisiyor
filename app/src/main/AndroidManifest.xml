    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Profile.ShowProfile"></activity>
        <activity android:name=".Profile.UpdateUserProfile" />
        <activity android:name=".Profile.EditProfileActivity" />
        <activity android:name=".ShowRecipeByCategoryActivity" />
        <activity android:name=".EachMealRecipeActivity" />
        <activity android:name=".UploadRecipeActivity" />
        <activity android:name=".Login.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.SignUpActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>